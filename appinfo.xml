<app>

    <classes>
        <!--
            Module, Erklärungen und ACLs, die von OPDE unterstützt werden. Hier steht drin, welche Klasse welche Fähigkeiten hat.
            Die einzelnen Rechte (hier ACLs) genannt, werden direkt im Programm-Code unterstützt. Bei der Vergabe von Zugriffsrechten
            werden diese Rechte als Mögliche Zuordnungen zu Gruppen angeboten.

            Main Classes werden im Hauptprogramm angeboten, neben den Pflegeakten. Sofern der Benutzer die EXECUTE Rechte dafür hat.
        -->
        <class name="admin.residents.cash" short="Barbeträge"
               long="Dieses Programm dient der Verwaltung der sog. Taschengelder der BewohnerInnen" main="true"
               javaclass="op.bw.tg.PnlTG" icon="coins.png">
            <execute langbundle="appinfo.default.acl.execute"/>
            <delete langbundle="appinfo.default.acl.delete"/>
            <insert langbundle="appinfo.default.acl.insert"/>
        </class>
        <class name="nursingrecords.main" short="Pflegeakte" long="Das hier ist die gesamte Pflegedokumentation">
            <execute langbundle="appinfo.default.acl.execute"/>
        </class>
        <class name="nursingrecords.prescription" short="Pflegeakte/Verordnungen"
               long="Dieses Modul gehört zur Pflegedokumentation. Es ermöglicht die Verwaltung von ärztlichen Verordnungen.">
            <insert langbundle="appinfo.default.acl.insert"/>
            <select langbundle="appinfo.default.acl.select"/>
            <execute langbundle="appinfo.default.acl.execute"/>
            <print langbundle="appinfo.default.acl.print"/>
            <delete langbundle="appinfo.default.acl.delete"/>
            <cancel langbundle="appinfo.default.acl.cancel"/>
            <update langbundle="appinfo.default.acl.update"/>
        </class>
        <class name="nursingrecords.files" short="Pflegeakte/Dateien"
               long="Dieses Modul gehört zur Pflegedokumentation. Es ermöglicht die Anzeige von Dateien, die dem/der BewohnerIn zugeordnet wurden.">
            <insert langbundle="appinfo.default.acl.insert"/>
            <select langbundle="appinfo.default.acl.select"/>
            <execute langbundle="appinfo.default.acl.execute"/>
