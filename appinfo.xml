        <class name="nursingrecords.vitalparameters" short="Pflegeakte/Bewohnerwerte"
               long="Das Modul zur Bearbeitung und Anzeige von Vitalwerten.">
            <insert langbundle="appinfo.default.acl.insert"/>
            <select langbundle="appinfo.default.acl.select"/>
            <execute langbundle="appinfo.default.acl.execute"/>
            <print langbundle="appinfo.default.acl.print"/>
            <cancel langbundle="appinfo.default.acl.cancel"/>
            <update langbundle="appinfo.default.acl.update"/>
        </class>
        <class name="nursingrecords.bhp" short="Pflegeakte/Behandlungspflege" long="">
            <execute langbundle="appinfo.default.acl.execute"/>
            <insert langbundle="appinfo.default.acl.insert"/>
            <update langbundle="appinfo.default.acl.update"/>
        </class>
        <class name="nursingrecords.bhpimport" short="BHPImport"
               long="Import-Modul, das die täglichen BHPs für alle aktiven Verordnungen erstellt.">
        </class>
        <class name="opde.tickets" short="Vorgänge" long="Das Modul zur Bearbeitung und Anzeige von Vorgängen."
               main="true" javaclass="op.vorgang.PnlVorgang" icon="link-symbol.png">
            <manager langbundle="appinfo.default.acl.manager"/>
            <execute langbundle="appinfo.default.acl.execute"/>
        </class>
        <class name="opde.medication" short="Medikamente"
               long="Medikamente eingeben, buchen, korrigieren. All das können Sie hier." main="true"
               javaclass="op.care.med.PnlMed" icon="agt_virussafe.png">
            <execute langbundle="appinfo.default.acl.execute"/>
        </class>
        <class name="nursingrecords.info" short="Pflegeakte/Informationen"
               long="Hier können Informationen zu den BewohnerInnen eingegeben werden."
